rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // sessions collection
    // sessions contain conversation data with dual consent
    match /sessions/{sessionId} {
      // allow server-side access (from API routes)
      allow read, write: if true;

      // TODO: once auth is implemented, restrict to:
      // allow read: if isAuthenticated();
      // allow create: if isAuthenticated() && request.resource.data.consent.personA && request.resource.data.consent.personB;
      // allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      // allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // transcripts collection
    // stores conversation transcripts
    match /transcripts/{transcriptId} {
      // allow server-side access (from API routes)
      allow read, write: if true;

      // TODO: once auth is implemented, restrict to:
      // allow read: if isAuthenticated();
      // allow create: if isAuthenticated();
      // allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // audio files collection (firestore storage workaround)
    // stores base64-encoded audio files (free tier workaround instead of firebase storage)
    match /audioFiles/{audioId} {
      // allow public read for audio playback
      allow read: if true;

      // allow server-side write from API routes
      allow write: if true;

      // TODO: once auth is implemented, consider:
      // allow read: if true; // keep public for audio playback
      // allow write: if isAuthenticated(); // restrict writes to authenticated users
    }

    // deny all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}