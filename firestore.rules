rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function hasRole(role) {
      return isAuthenticated() && request.auth.token.role == role;
    }

    function isAdmin() {
      return hasRole('admin');
    }

    // sessions collection
    // sessions contain conversation data with dual consent
    match /sessions/{sessionId} {
      // read: authenticated users only
      allow read: if isAuthenticated();

      // create: authenticated users with dual consent
      allow create: if isAuthenticated()
        && request.resource.data.consent.personA == true
        && request.resource.data.consent.personB == true;

      // update/delete: owner or admin only
      allow update, delete: if isAuthenticated()
        && (resource.data.userId == request.auth.uid || isAdmin());
    }

    // transcripts collection
    // stores conversation transcripts
    match /transcripts/{transcriptId} {
      // read: authenticated users only
      allow read: if isAuthenticated();

      // create: authenticated users only
      allow create: if isAuthenticated();

      // update/delete: owner or admin only
      allow update, delete: if isAuthenticated()
        && (resource.data.userId == request.auth.uid || isAdmin());
    }

    // audio files collection (firestore storage workaround)
    // stores base64-encoded audio files (free tier workaround instead of firebase storage)
    match /audioFiles/{audioId} {
      // allow public read for audio playback
      allow read: if true;

      // allow server-side write from API routes
      allow write: if true;

      // TODO: once auth is implemented, consider:
      // allow read: if true; // keep public for audio playback
      // allow write: if isAuthenticated(); // restrict writes to authenticated users
    }

    // deny all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}