rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // NOTE: These rules are intentionally permissive since we're using
    // Firebase Admin SDK for backend authentication and authorization.
    // The Admin SDK bypasses these rules, so they mainly protect
    // against unauthorized client-side access.

    // allow authenticated users to read/write any document
    // authorization is enforced in API routes via Admin SDK
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}