rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function hasRole(role) {
      return isAuthenticated() && request.auth.token.role == role;
    }

    function isAdmin() {
      return hasRole('admin');
    }

    // sessions collection
    // sessions contain conversation data with dual consent
    match /sessions/{sessionId} {
      // read: owner or admin only
      allow read: if isAuthenticated()
        && (resource.data.userId == request.auth.uid || isAdmin());

      // create: authenticated users with dual consent and userId matches auth
      allow create: if isAuthenticated()
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.consent.personA == true
        && request.resource.data.consent.personB == true;

      // update/delete: owner or admin only
      allow update, delete: if isAuthenticated()
        && (resource.data.userId == request.auth.uid || isAdmin());
    }

    // transcripts collection
    // stores conversation transcripts
    match /transcripts/{transcriptId} {
      // read: authenticated users only
      allow read: if isAuthenticated();

      // create: authenticated users only
      allow create: if isAuthenticated();

      // update/delete: owner or admin only
      allow update, delete: if isAuthenticated()
        && (resource.data.userId == request.auth.uid || isAdmin());
    }

    // audio files collection (firestore storage workaround)
    // stores base64-encoded audio files (free tier workaround instead of firebase storage)
    match /audioFiles/{audioId} {
      // read: owner or admin only (authentication enforced in API route)
      allow read: if isAuthenticated()
        && (resource.data.userId == request.auth.uid || isAdmin());

      // create: authenticated users only, userId must match auth
      allow create: if isAuthenticated()
        && request.resource.data.userId == request.auth.uid;

      // update/delete: owner or admin only
      allow update, delete: if isAuthenticated()
        && (resource.data.userId == request.auth.uid || isAdmin());
    }

    // users collection
    // stores user profiles synced from Firebase Auth
    match /users/{userId} {
      // users can read their own profile
      allow read: if isAuthenticated() && request.auth.uid == resource.data.uid;

      // users can create/update their own profile
      // the userId is generated from uid, so we need to check the uid field matches
      allow create, update: if isAuthenticated() && request.auth.uid == request.resource.data.uid;

      // admins can read all profiles
      allow read: if isAdmin();

      // only admins can delete profiles
      allow delete: if isAdmin();
    }

    // deny all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}